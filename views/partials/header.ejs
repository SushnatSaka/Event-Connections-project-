<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Project-2</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="/css/bootstrap.css" rel="stylesheet">
</head>

<body>
    <header class="first">
        <nav class="navbar navbar-expand">
            <div class="container-fluid">
                <a href="/" class="navbar-brand"><img src="/images/hello_world_logo.jpeg" alt="logo" id="logo"></a>

                <ul class="navbar-nav">
                    
                    <%if (!user){%>
                        <li class="nav-item">
                            <a href="/users/login" class="nav-link" id="b1">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users/new" class="nav-link" id="b2">Sign Up</a>
                        </li>
                    <%} else {%>
                        <li class="nav-item">
                            <a href="/connections/new" class="nav-link">Start a New Connection</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users/profile" class="nav-link" id="b3">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a href='/users/logout' class="nav-link" id="b4">Log Out</a>
                        </li>
                    <%}%>
                    
                    
                </ul>
            </div>

        </nav>
    </header>

    <header class="second">
        <nav class="navbar navbar-expand">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/connections" class="nav-link">Connections</a>
                    </li>
                    <%if(username){%>
                        <li>
                            <p>Welcome <%=username%></p>
                        </li>
                    <%}%>

                </ul>
            </div>

        </nav>
    </header>

    <%if(errorMessages.length > 0){
        errorMessages.forEach(message => {%>
            <div class="error"><%=message%></div>
        <%});
    }%>

    <%if(successMessages.length > 0){
        successMessages.forEach(message => {%>
            <div class="success"><%=message%></div>
        <%});
    }%>



    